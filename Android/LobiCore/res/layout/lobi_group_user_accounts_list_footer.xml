<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lobi_group_user_accounts_list_row_background_selector"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/lobi_sub_account_popup_divider" >
    </FrameLayout>

    <com.kayac.lobi.libnakamap.components.ListRow
        android:id="@+id/lobi_group_user_accounts_list_item_listrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/lobi_padding_low"
        android:paddingTop="@dimen/lobi_padding_low"
        lobi:lobi_centerContentLayoutId="@layout/lobi_list_row_content_two_line"
        lobi:lobi_contentBackground="@drawable/lobi_group_user_accounts_list_row_background_selector"
        lobi:lobi_leftContentLayoutId="@layout/lobi_list_row_content_image_view"
        lobi:lobi_rightContentLayoutId="@layout/lobi_list_row_content_arrow_white" />

</LinearLayout>