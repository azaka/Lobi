<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lobi_group_list_row_height"
    android:layout_gravity="top|left"
    android:paddingLeft="@dimen/lobi_padding_middle"
    android:paddingRight="@dimen/lobi_padding_middle"
    android:paddingTop="@dimen/lobi_padding_middle"
    android:paddingBottom="@dimen/lobi_padding_low" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/lobi_base_list" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/lobi_group_list_header_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lobi_margin_middle"
                android:src="@drawable/lobi_icn_btn_addgroup" />

            <TextView
                android:id="@+id/lobi_group_list_header_text"
                style="@style/lobi_textview_black_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>